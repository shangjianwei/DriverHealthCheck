<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.check.driver.driverhealthcheck.activity.ChangeInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#1E82D2"
        android:layout_height="@dimen/dp_40">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/back_pic" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="修改信息"

            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="删除账号"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/edit_background"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_alignParentRight="true"
                android:id="@+id/et_name"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:hint="请输入您的姓名"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/edit_background"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="身高(m)："
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_alignParentRight="true"
                android:id="@+id/et_height"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:hint="请输入您的身高"
                android:inputType="number"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/edit_background"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="体重(kg)："
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_alignParentRight="true"
                android:id="@+id/et_weight"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:hint="请输入您的体重"
                android:inputType="number"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/edit_background"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="年龄："
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_alignParentRight="true"
                android:id="@+id/et_age"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:hint="请输入您的年龄"
                android:inputType="number"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/edit_background"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_alignParentRight="true"
                android:id="@+id/et_phone"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:hint="请输入您的手机号"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/edit_background"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="原密码："
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_alignParentRight="true"
                android:id="@+id/et_pass"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:hint="请输入您的原密码"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/edit_background"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="新密码：" />

            <EditText
                android:layout_alignParentRight="true"
                android:id="@+id/et_new_pass"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:hint="请输入您的新密码"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/edit_background"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="确认密码："
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_alignParentRight="true"
                android:id="@+id/et_pass2"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:hint="请再次输入您的密码"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/edit_background"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_64"
            android:background="#2196F3"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_20" />



    </LinearLayout>

</LinearLayout>
